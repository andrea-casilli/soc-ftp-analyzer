{
  "ftp_log_paths": [
    "/var/log/vsftpd.log",
    "/var/log/proftpd/proftpd.log",
    "/var/log/pure-ftpd/pure-ftpd.log",
    "/var/log/messages",
    "/var/log/syslog",
    "/var/log/secure"
  ],
  "suspicious_commands": [
    "STOR", "APPE", "STOU", "RETR", "DELE", "RMD", "MKD",
    "RNFR", "RNTO", "SITE", "CHMOD", "ABOR", "ALLO", "REST"
  ],
  "suspicious_extensions": [
    ".exe", ".bat", ".cmd", ".sh", ".bash", ".php", ".php3", ".php4",
    ".php5", ".phtml", ".asp", ".aspx", ".jsp", ".jspx", ".py", ".pyc",
    ".pl", ".pm", ".rb", ".rbw", ".dll", ".so", ".scr", ".pif", ".vbs",
    ".vbe", ".js", ".jse", ".wsf", ".wsh", ".ps1", ".psm1", ".psd1"
  ],
  "brute_force_threshold": 10,
  "brute_force_window_seconds": 300,
  "data_exfiltration_threshold_mb": 100,
  "suspicious_usernames": [
    "anonymous", "ftp", "guest", "test", "user", "admin", "root",
    "backup", "oracle", "mysql", "postgres", "nobody"
  ],
  "known_malicious_ips": [
    "185.165.29.0/24",
    "193.201.224.0/24"
  ],
  "alert_on_suspicious_commands": true,
  "alert_on_data_exfiltration": true,
  "alert_on_brute_force": true,
  "alert_on_anonymous_login": true,
  "alert_on_suspicious_users": true,
  "exclude_patterns": [
    "internal_backup",
    "legacy_transfer"
  ],
  "thresholds": {
    "max_login_attempts_per_hour": 20,
    "max_downloads_per_session": 100,
    "max_file_size_mb": 1000
  }
}
